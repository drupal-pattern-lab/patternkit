{
  "extends": [
    "tslint-eslint-rules"
  ],
  "rules": {
    // TSLint: Recommended.
    "adjacent-overload-signatures": true,
    "align": [true, "parameters", "statements"],
    "array-type": [true, "array-simple"],
    "arrow-parens": true,
    "arrow-return-shorthand": true,
    "ban-types": [
      true,
      ["Object", "Avoid using the `Object` type. Did you mean `object`?"],
      ["Function", "Avoid using the `Function` type. Prefer a specific function type, like `() => void`."],
      ["Boolean", "Avoid using the `Boolean` type. Did you mean `boolean`?"],
      ["Number", "Avoid using the `Number` type. Did you mean `number`?"],
      ["String", "Avoid using the `String` type. Did you mean `string`?"],
      ["Symbol", "Avoid using the `Symbol` type. Did you mean `symbol`?"]
    ],
    "callable-types": true,
    "class-name": true,
    "cyclomatic-complexity": false,
    "import-spacing": true,
    "indent":  ["spaces"],
    "interface-name": ["always-prefix"],
    "interface-over-type-literal": true,
    "jsdoc-format": true,
    "max-classes-per-file": [true, 1],
    "max-line-length": [true, 120],
    "member-access": true,
    "member-ordering": [true, {"order": "statics-first"}],
    "no-angle-bracket-type-assertion": true,
    "no-any": false,
    "no-bitwise": true,
    "no-consecutive-blank-lines": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-empty": true,
    "no-empty-interface": true,
    "no-internal-module": true,
    "no-invalid-this": false,
    "no-misused-new": true,
    "no-namespace": true,
    "no-parameter-properties": false,
    "no-reference": true,
    "no-reference-import": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": false,
    "no-unnecessary-initializer": true,
    "no-unsafe-finally": true,
    "no-use-before-declare": false,
    "no-var-keyword": true,
    "no-var-requires": true,
    "object-literal-shorthand": true,
    "object-literal-sort-keys": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-finally",
      "check-open-brace",
      "check-whitespace"
    ],
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "module-source-path": "full",
        "named-imports-order": "case-insensitive"
      }
    ],
    "prefer-const": true,
    "prefer-for-of": true,
    "radix": true,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "asyncArrow": "always",
        "constructor": "never",
        "method": "never",
        "named": "never"
      }
    ],
    "typedef": false,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "typeof-compare": true,
    "unified-signatures": true,
    "use-isnan": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    // Possible errors.
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "no-conditional-assignment": true,
    "no-console": true,
    "valid-jsdoc": [true, {
      "prefer": {
        "returns": "return",
        "property": "prop"
      },
      "requireReturn": false
    }],
    // Best practices.
    "curly": true,
    "forin": true,
    "label-position": true,
    "no-arg": true,
    "no-construct": true,
    "no-eval": true,
    "no-multi-spaces": true,
    "no-unused-expression": true,
    "triple-equals": [true, "allow-null-check"],
    // Variables.
    "no-unused-variable": true,
    // Stylistic Issues.
    "array-bracket-spacing": ["never"],
    "brace-style": ["stroustrup", {"allowSingleLine": true}],
    "comment-format": [true, "check-space", "check-uppercase"],
    "eofline": true,
    "linebreak-style": [true, "LF"],
    "new-parens": true,
    "no-trailing-whitespace": true,
    "object-curly-spacing": [true, "never"],
    "one-variable-per-declaration": true,
    "object-literal-key-quotes": [true, "consistent-as-needed"],
    "quotemark": [true, "single", "avoid-escape"],
    "semicolon": [true, "always"],
    "space-in-parens": [true, "never"],
    "ter-indent": [true, 2, {"SwitchCase": 1}],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "eslint-rules": {
    // Unsupported rules.
    // @see https://github.com/buzinas/tslint-eslint-rules
    // Best practices.
    "block-scoped-var": true,
    "no-extend-native": true,
    "no-extra-bind": true,
    "no-implied-eval": true,
    "no-iterator": true,
    "no-lone-blocks": true,
    "no-loop-func": true,
    "no-multi-str": true,
    "no-new-func": true,
    "no-octal-escape": true,
    "no-proto": true,
    "no-return-assign": true,
    "no-script-url": true,
    "no-sequences": true,
    "no-with": true,
    "yoda": [true, "never"],
    // Variables.
    "no-catch-shadow": true,
    "no-label-var": true,
    "no-shadow-restricted-names": true,
    "no-undef-init": true,
    "no-undefined": true,
    // Node.js or CommonJS.
    "no-process-exit": true,
    // Stylistic Issues.
    "comma-spacing": true,
    "comma-style": ["last"],
    "computed-property-spacing": ["never"],
    "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
    "keyword-spacing": [2, {"before": true, "after": true}],
    "lines-around-comment": [
      2,
      {"beforeBlockComment": true, "afterBlockComment": false}
    ],
    "max-nested-callbacks": [1, 3],
    "no-array-constructor": true,
    "no-nested-ternary": true,
    "no-new-object": true,
    "no-spaced-func": true,
    "semi-spacing": [true, {"before": false, "after": true}],
    "space-before-blocks": [true, "always"],
    "space-before-function-paren": [true, {"anonymous": "always", "named": "never"}],
    "space-infix-ops": true,
    "space-unary-ops": [true, { "words": true, "nonwords": false }]
  }
}
